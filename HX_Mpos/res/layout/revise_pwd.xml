<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/regBackGround"
    android:orientation="vertical" >

    <include layout="@layout/layout_title"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/default_margin">


        <LinearLayout
            style="@style/style_edit_layout">

        <TextView
            style="@style/style_text_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/ori_pwd" />

        <EditText
            android:id="@+id/old_pwd_edit"
            style="@style/style_edit_item"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:hint="@string/inputPassWord"
            android:inputType="textPassword"
            android:maxLength="15"
            android:singleLine="true"
            android:textColorHint="@color/grayline" />
        </LinearLayout>


        <LinearLayout
            style="@style/style_edit_layout">
        <TextView
            style="@style/style_text_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/new_pwd" />

        <EditText
            android:id="@+id/new_pwd_edit"
            style="@style/style_edit_item"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:hint="@string/inputPassWord"
            android:inputType="textPassword"
            android:maxLength="15"
            android:singleLine="true"
            android:textColorHint="@color/grayline" />
        </LinearLayout>
        <LinearLayout
            style="@style/style_edit_layout">
        <TextView
            style="@style/style_text_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/confirm_pwd" />

        <EditText
            android:id="@+id/new_pwda_edit"
            style="@style/style_edit_item"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:hint="@string/inputSecondTime"
            android:inputType="textPassword"
            android:maxLength="15"
            android:textColorHint="@color/grayline" />
            </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/revise_pwd_btn"
        style="@style/style_btn"
        android:text="@string/ok"
        android:layout_marginTop="@dimen/default_height"
         />

</LinearLayout>