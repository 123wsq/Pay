<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/regBackGround"
    android:id="@+id/select_time_layout"
    >

    <include layout="@layout/layout_title"/>


    <LinearLayout style="@style/style_edit_layout">

        <TextView
            android:id="@+id/tv_start_time"
            style="@style/style_text_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/start_time" />

        <EditText
            android:id="@+id/et_select_start_time"
            style="@style/style_edit_item"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:hint="" />

    </LinearLayout>


    <LinearLayout style="@style/style_edit_layout">

        <TextView
            android:id="@+id/tv_end_time"
            style="@style/style_text_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/end_time" />

        <EditText
            android:id="@+id/et_select_end_time"
            style="@style/style_edit_item"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:hint="" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_height"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        >

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ok"
            android:background="@drawable/selector_next_normal"
            android:textColor="#FFFFFF"

            />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:background="@drawable/shape_cancel"
            android:textColor="@color/LKblue"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>


</LinearLayout>