<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/regBackGround"
    android:orientation="vertical" >

    <include layout="@layout/layout_title"></include>

    
    <LinearLayout 
        
        style="@style/style_edit_layout"
        >
        <TextView
            style="@style/style_text_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/new_pwd" />
        
        <EditText 
            android:id="@+id/et_pw1"
            style="@style/style_edit_item"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:hint="@string/inputPassWord"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textColorHint="@color/grayline"
            />
        
    </LinearLayout>
    
    <LinearLayout 
        style="@style/style_edit_layout"
        >
        
        <TextView
            style="@style/style_text_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/confirm_pwd" />

        <EditText
            android:id="@+id/et_pw2"
            style="@style/style_edit_item"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:hint="@string/inputSecondTime"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColorHint="@color/grayline" />
    </LinearLayout>
    

    <Button
        android:id="@+id/btn_next"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/reg_btn_next_height"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/selector_next_normal"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:textSize="@dimen/large" />

</LinearLayout>